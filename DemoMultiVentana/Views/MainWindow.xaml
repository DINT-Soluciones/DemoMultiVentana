<Window x:Class="DemoMultiVentana.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoMultiVentana"
        xmlns:vm="clr-namespace:DemoMultiVentana.ViewModels"
        mc:Ignorable="d"
        Title="Multi-Ventana" 
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <!-- Contexto de datos -->
    <Window.DataContext>
        <vm:MainWindowVM/>
    </Window.DataContext>

    <!-- Atajos de teclado; debe tener el foco la ventana principal -->
    <Window.InputBindings>
        <KeyBinding Key="N" 
                    Modifiers="Control" 
                    Command="{Binding Path=AbrirVentanaCommand}"/>
        <KeyBinding Key="W" 
                    Modifiers="Control" 
                    Command="{Binding Path=CerrarVentanaCommand}"/>
    </Window.InputBindings>

    <!-- Contenido de la ventana -->
    <StackPanel>
        <TextBlock Text="VENTANA PRINCIPAL"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="blue"
                   Margin="0,20,0,10"
                   HorizontalAlignment="Center"
                   />
        <Button Content="Abrir ventana"
                Width="100" Height="30" 
                Margin="10"
                Command="{Binding Path=AbrirVentanaCommand}"
                />
        <Button Content="Cerrar ventana/ventanas"
                Width="150"
                Height="30" 
                Margin="10"
                Command="{Binding Path=CerrarVentanaCommand}"
                />
    </StackPanel>
</Window>
