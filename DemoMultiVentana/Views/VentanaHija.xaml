<Window x:Class="DemoMultiVentana.Views.VentanaHija"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoMultiVentana.Views"
        xmlns:vm="clr-namespace:DemoMultiVentana.ViewModels"
        mc:Ignorable="d"
        Title="Ventana HIJA" 
        Height="450" Width="800"
        WindowStartupLocation="Manual">

    <Window.DataContext>
        <vm:VentanaHijaVM/>
    </Window.DataContext>

    <!-- VISTA de la Ventana Hija -->
    <StackPanel>
        <TextBlock Text="{Binding Cadena}"
                   HorizontalAlignment="Center"
                   Margin="80"
                   FontSize="30"
                   FontWeight="Bold"
                   />
    </StackPanel>
</Window>
